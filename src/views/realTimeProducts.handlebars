<h1>Administrar Productos en Tiempo Real</h1>

<!-- Formulario para agregar un nuevo producto -->
<form id="addProductForm">
    <label for="title">Título del producto:</label>
    <input type="text" id="title" name="title" required>

    <label for="description">Descripción:</label>
    <input type="text" id="description" name="description" required>

    <label for="price">Precio:</label>
    <input type="number" id="price" name="price" required>

    <label for="category">Categoría:</label>
    <input type="text" id="category" name="category" required>

    <button type="submit">Agregar Producto</button>
</form>

<!-- Mostrar productos actuales -->
<h2>Productos actuales</h2>
<div id="productContainer">
    {{!-- Aquí se mostrarán los productos en tiempo real --}}
</div>

<!-- Formulario para eliminar producto -->
<form id="deleteProductForm">
    <label for="deleteName">Nombre del producto a eliminar:</label>
    <input type="text" id="deleteName" name="deleteName" required>

    <button type="submit">Eliminar Producto</button>
</form>

